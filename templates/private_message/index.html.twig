{# Form to send message in private to another uer #}
{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
{% for message in app.session.flashBag.get('msg') %}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{message}}
    <button class="close" type="button" data-dismiss="alert" aria-label="close">
        <span aria-hidden="true">&times;</span>
    </button>

</div>
{% endfor %}

<div class="container mt-4">
    <div class="row">

        <h1 class="mx-auto display-4 text-center">{{title}}</h1>
    </div>
    <div class="row mt-4">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            {{ form_start(form)}}
            {{ form_widget(form)}}
            {{ form_end(form)}}
            {# Messages received #}
            <a href="{{path('receiverMessages')}}" class="btn btn-outline-secondary btn-lg btn-block">Received
                message</a>
            {# Messages sent #}
            <a href="{{path('sentMessages')}}" class="btn btn-outline-secondary btn-lg btn-block">Sent message</a>
            <div class="clearfix"></div>
        </div>
        <div class="col-md-m3">

        </div>
    </div>
</div>


{% endblock %}